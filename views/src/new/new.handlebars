<html lang='en'>
    <head>
        <meta charset='UTF-8' />
        <meta name='viewport' content='width=device-width, initial-scale=1.0' />
        <title>IFSP - TutorTime</title>
        <link rel='stylesheet' href='/style.css' />
    </head>
    <body>
        <!-- header -->
        <header>
            <div class='logo'>
                <div class='imageLogo'>
                    <img src='/logo.png' alt='Logo TutorTime' />
                </div>
                TutorTime - IFSP
            </div>
            <ul class='menu'>
                <a href='/home'><li>Home</li></a>
                <a href='/about'>About</a>
                <a href='/manage'><li>Manage</li></a>
            </ul>
        </header>
        <h1>Monitorias de {{REQ}}: </h1>
        <hr />
        <div class='monitoria-grid'>
            {{#each monitorias}}
                <div class='monitoria-card'>
                    <div class='monitoria-badge'>{{this.Materia.nome}}</div>
                    <img
                        src='{{this.imagemUrl}}'
                        alt='{{this.nome}}'
                        class='monitoria-image'
                    />
                    <div class='monitoria-content'>
                        <h2 class='monitoria-title'>Monitoria
                            {{this.Materia.nome}}</h2>
                        <p class='monitoria-details'>
                            <strong>Dia:</strong>
                            {{this.dia}}
                            <br />
                            <strong>Hor√°rio:</strong>
                            {{this.horario}}
                            <br />
                            <strong>Local:</strong>
                            {{this.local}}
                            <br />
                            <strong>Professor:</strong>
                            {{this.Professor.nome}}
                            <br />
                            <strong>Monitor:</strong>
                            {{this.Monitor.nome}}
                        </p>
                        <p class='monitoria-desc'>{{this.descricao}}</p>
                        <div class='monitoria-actions'>
                            <a
                                href='/inscrito/{{this.id}}'
                                class='monitoria-btn'
                            >Inscrever-se</a>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </body>
</html>